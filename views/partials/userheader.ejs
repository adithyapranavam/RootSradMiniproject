<%- include('../layouts.ejs') -%>

<header class="header header-7">
    <div class="header-middle sticky-header">
        <div class="container">
            <div class="header-left">
                <button class="mobile-menu-toggler">
                    <span class="sr-only">Toggle mobile menu</span>
                    <i class="icon-bars"></i>
                </button>
                
                <a href="" class="logo">
                    <img src="/assets/images/download.png" alt="Molla Logo" width="100" height="25">
                </a>
            </div>

            <div class="header-right">

                <nav class="main-nav">
                    <ul class="menu sf-arrows">
                        <li class="megamenu-container active">
                            <a href="/" class="sf-with-ul">Home</a>
                        </li>
                        <li>
                            <a href="" class="sf-with-ul">Shop</a>
                        </li>
                        <% if(user){ %>
                            <li>
                                <a href="/logout">Logout</a>
                            </li>

                        <% } else { %>
                            <li>
                                <a href="/login" class="sf-with-ul">Login</a>
                                <ul>
                                    <li><a href="/signup"> NEW TO HEAR? &nbsp; <span style="color:green;">SIGN UP</span></a></li>
                                </ul>
                            </li> 
                        <% } %>
                    </ul>
                </nav>
                
                <div class="header-search">
                    <a href="#" class="search-toggle" role="button"><i class="icon-search"></i></a>
                    <form action="#" method="get">
                        <div class="header-search-wrapper">
                            <label for="q" class="sr-only">Search</label>
                            <input type="search" class="form-control" name="q" id="q" placeholder="Search in..." required>
                        </div>
                    </form>
                </div>
                
                <a href="/wishlist" class="wishlist-link">
                    <i class="icon-heart-o"></i>
                    <% if(user)
                    { %>
                        <span class="wishlist-count"><%= wishlist %></span> 
                   <%  } else{ %>
                <% } %>   
                </a>
               
                <div class="dropdown cart-dropdown"> 
                    <a href="/cart" class="dropdown-toggle" >
                        <i class="icon-shopping-cart"></i>
                        <% if (user) { %>
                             <span class="cart-count"> <%= cartCount %></span>
                             <% } else { %>
                             
                                <% } %>
                    </a>
                </div>

                <% if(user){ %>
                    <li style="list-style: none;">
                        <img src="/assets/images/download.jpeg" style="height: 30px; width: 30px; border-radius: 50%; margin-top: 10px; margin-left: 15px;" alt="">
                        <p style="color: green; font-size: 12px; margin-left: 15px;"><%=name%></p>
                    </li>

                <% } else { %>
                    <li style="list-style: none;">
                        <img src="/assets/images/images.jpeg" style="height: 42px; width: 40px; border-radius: 50%; margin-bottom: 5px; margin-left: 15px;" alt="">
                    </li> 
                <% } %>

            </div>
        </div>
    </div>
</header>





