<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<script>
  
  function block_user(form) {

    swal({
      title: "Are you sure?",
      text: "You want Block user!",
    
      buttons: true,
      dangerMode: true,
    }).then((willDelete) => {
      if (willDelete) {
        form.submit();
      }
    });
  }

  function unblock_user(form) {
   
    swal({
      title: "Are you sure?",
      text: "You want UnBlock user!",
     
      buttons: true,
      dangerMode: true,
    }).then((willDelete) => {
      if (willDelete) {
        form.submit();
      }
    });
  }
	
</script>
   
