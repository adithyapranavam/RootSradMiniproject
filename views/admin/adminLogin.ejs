<body class="bg-theme bg-theme1">
       <div id="pageloader-overlay" class="visible incoming"><div class="loader-wrapper-outer"><div class="loader-wrapper-inner" ><div class="loader"></div></div></div></div> 
     <div id="wrapper">
     <div class="loader-wrapper"><div class="lds-ring"><div>
        <div class="card card-authentication1 mx-auto my-5">
            <div class="card-body">
             <div class="card-content p-2">
                 <div class="text-center">
                     <img src="/assets/images/logo-icon.png" alt="logo icon">
                 </div>
              <div class="card-title text-uppercase text-center ">Log In</div>
              <form action="/admin/login" method="post" onsubmit="return validateForm()">
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label for="exampleInputUsername" class="sr-only">Username</label>
                        <div class="position-relative has-icon-right">
                            <input type="text" id="email" name="email" class="form-control input-shadow" onblur="emailValidate()" placeholder="Enter Email">
                            <div style="display: flex;flex:end ; font-size: 13px;"><p id="emailerror" style="color:red; margin-left: 0px;"></p></div>
                        </div>
                    </div>
                    <div class="form-group col-md-12">
                        <label for="exampleInputPassword" class="sr-only">Password</label>
                        <div class="position-relative has-icon-right">
                            <input type="password" id="password" class="form-control input-shadow" name="password" onblur="passwordValidate()" placeholder="Enter Password">
                            <div style="display: flex;flex:end ; font-size: 13px;"><p id="passworderror" style="color: red; margin-left: 0px;"></p></div>
                            <a href="" style="font-size: 10px; padding-left: 1%;">Forgot Password?</a>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-light btn-block"  >Login</button>
            </form>
               </div>
              </div>

